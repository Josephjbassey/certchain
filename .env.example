# Hedera CertChain Environment Variables (Pure dApp)

# ===== Network Configuration =====
VITE_HEDERA_NETWORK=testnet
# Options: testnet, mainnet, previewnet

# ===== Wallet Connect =====
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ===== HCS Configuration (Optional) =====
VITE_HCS_LOG_TOPIC_ID=0.0.xxxxx

# ===== IPFS/Pinata Configuration =====
VITE_PINATA_JWT=your_pinata_jwt
VITE_PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs/

# ===== Certificate Token Configuration =====
# Your HTS Token ID for certificates (create one on Hedera)
VITE_CERTIFICATE_TOKEN_ID=0.0.xxxxx

# ===== Feature Flags =====
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_AI_CONSOLE=false
